<Window x:Class="CMK_WebSiteDeveloperStudio.Views.NewFile"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CMK_WebSiteDeveloperStudio.Views"
        mc:Ignorable="d"
        Title="NewFile" Height="300" Width="{Binding ColumWidth, Mode=OneWayToSource}">
    <Grid>
        <StackPanel Orientation="Vertical">
            <StackPanel Orientation="Horizontal">
                <TextBox Width="{Binding ColumWidthHalf}"></TextBox>
                <Button Width="{Binding ColumWidthHalf}"></Button>
            </StackPanel>        
        </StackPanel>
    </Grid>
</Window>
