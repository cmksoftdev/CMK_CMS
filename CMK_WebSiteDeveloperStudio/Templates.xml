<?xml version="1.0" encoding="utf-8" ?>
<TemplateConfig>
  <Templates>
  
    <Template>
      <FileTemplate>1</FileTemplate>
      <Image></Image>
      <Name>Empty Text File</Name>
      <FilePath></FilePath>
      <FileExtension>.txt</FileExtension>
      <PlaceHolders>
      </PlaceHolders>
    </Template>

    <Template>
      <FileTemplate>1</FileTemplate>
      <Image></Image>
      <Name>HTML 5 Index Site</Name>
      <FilePath>Templates\html5index.tpt</FilePath>
      <FileExtension>.html</FileExtension>
      <PlaceHolders>
        <PlaceHolder>
          <Name>Language</Name>
          <Symbol>!language</Symbol>
        </PlaceHolder>
        <PlaceHolder>
          <Name>Title</Name>
          <Symbol>!title</Symbol>
        </PlaceHolder>
        <PlaceHolder>
          <Name>Content</Name>
          <Symbol>!content</Symbol>
        </PlaceHolder>
      </PlaceHolders>
    </Template>

    <Template>
      <FileTemplate>1</FileTemplate>
      <Image></Image>
      <Name>Empty PHP Script</Name>
      <FilePath>Templates\phpscript.tpt</FilePath>
      <FileExtension>.php</FileExtension>
      <PlaceHolders>
        <PlaceHolder>
          <Name>Code</Name>
          <Symbol>!code</Symbol>
        </PlaceHolder>
      </PlaceHolders>
    </Template>

    <Template>
      <FileTemplate>2</FileTemplate>
      <Image></Image>
      <Name>JavaScript in HTML including Scriptfile</Name>
      <FilePath>Templates\inlinejs.tpt</FilePath>
      <FileExtension></FileExtension>
      <PlaceHolders>
        <PlaceHolder>
          <Name>Source File</Name>
          <Symbol>!source</Symbol>
        </PlaceHolder>
        <PlaceHolder>
          <Name>Code</Name>
          <Symbol>!code</Symbol>
        </PlaceHolder>
      </PlaceHolders>
    </Template>

    <Template>
      <FileTemplate>2</FileTemplate>
      <Image></Image>
      <Name>JavaScript Class</Name>
      <FilePath>Templates\jsclass.tpt</FilePath>
      <FileExtension></FileExtension>
      <PlaceHolders>
        <PlaceHolder>
          <Name>Class Name</Name>
          <Symbol>!classname</Symbol>
        </PlaceHolder>
      </PlaceHolders>
    </Template>

    <Template>
      <FileTemplate>2</FileTemplate>
      <Image></Image>
      <Name>If/Else</Name>
      <FilePath>Templates\ifelse.tpt</FilePath>
      <FileExtension></FileExtension>
      <PlaceHolders>
        <PlaceHolder>
          <Name>Boolean Conditions</Name>
          <Symbol>,,conditions</Symbol>
        </PlaceHolder>
        <PlaceHolder>
          <Name>If Body</Name>
          <Symbol>,,if</Symbol>
        </PlaceHolder>
        <PlaceHolder>
          <Name>Else Body</Name>
          <Symbol>,,else</Symbol>
        </PlaceHolder>
      </PlaceHolders>
    </Template>
  
  </Templates>
</TemplateConfig>